<h2>Burger Yum!</h2>

<h2>Ready to eat burgers!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li data-id="{{id}}" data-newBurger="{{burger_name}}">{{burger_name}}
        <button class="devoured" data-id="{{id}}" data-newdevour="{{devour}}">Devour!
        </button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li data-id="{{id}}" data-newBurger="{{burger_name}}">{{burger_name}}</li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="BurgerName">Burger Name:</label>
        <input type="text" id="addBurgerId" name="BurgerName">
    </div>

    <button type="submit">Add Burger</button>
</form>